<Window x:Class="TicTacToeClient.ListGamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Games list" Height="354" Width="444" Loaded="Window_Loaded">
    <Grid>
        <ListBox Margin="12,12,12,92" Name="listBox1" />
        <Button Content="JOIN!" Height="23" HorizontalAlignment="Right" Margin="0,0,12,63" Name="button1" VerticalAlignment="Bottom" Width="75" Click="button1_Click" IsEnabled="False" />
        <TextBox Height="23" Margin="117,0,93,63" Name="playerNameTextBox" VerticalAlignment="Bottom" TextChanged="playerNameTextBox_TextChanged" />
        <Label Content="Your name:" Height="28" HorizontalAlignment="Left" Margin="12,0,0,60" Name="label1" VerticalAlignment="Bottom" Width="115" />
        <Button Content="NEW GAME!" Height="23" HorizontalAlignment="Right" Margin="0,0,12,34" Name="newGameBtn" VerticalAlignment="Bottom" Width="75" Click="newGameBtn_Click" IsEnabled="False" />
        <Label Content="Game name:" Height="28" HorizontalAlignment="Left" Margin="12,257,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="117,0,93,33" Name="gameNameTextBox" VerticalAlignment="Bottom" IsEnabled="True" TextChanged="gameNameTextBox_TextChanged" />
    </Grid>
</Window>
